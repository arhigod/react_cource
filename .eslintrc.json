{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [2, 4, { "SwitchCase": 1 }],
        "linebreak-style": [1, "windows"],
        "quotes": [2, "single"],
        "semi": [2, "always"]
    },
    "globals": {
        "module": true,
        "require": true
    }
}
